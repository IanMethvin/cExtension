{
  "manifest_version": 2,

  "name": "Chrome Stock Ticker",
  "description": "This extension sucks less now that Chris is here",
  "version": "1.3",

	"content_scripts": [{
	  "matches": ["<all_urls>"], //where your script should be injected
	  "css": ["css/ticker.css"], //the name of the file to be injected
	  "js": ["libraries/jQuery_3.2.1.min.js", "libraries/underscore-min.js"]
	}],
  "web_accessible_resources": [
    "fonts/subwayFont.ttf"
  ],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
	  "storage"
  ],
  "background": {
    "scripts": ["libraries/jQuery_3.2.1.min.js", "js/background.js"],
    "persistent": false
  },  
  "browser_action": {
    "default_title": "Add Stock Ticker"
    //"default_popup": "popup.html"
  }
}

